# Configurazione Produzione - Africa Business Bridge
# IMPORTANTE: Copia questo file in .env.production e modifica i valori

# Environment
ENVIRONMENT=production

# Database
DB_NAME=africa_business_bridge
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_HOST=db
DB_PORT=5432

# Backend
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_AT_LEAST_32_CHARACTERS
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# CORS - Specifica il dominio del frontend in produzione
BACKEND_CORS_ORIGINS=https://africabusinessbridge.com,https://www.africabusinessbridge.com

# Frontend
VITE_API_URL=https://api.africabusinessbridge.com/api/v1

# Email (opzionale)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=noreply@africabusinessbridge.com
EMAILS_FROM_NAME=Africa Business Bridge

# Redis (opzionale)
REDIS_URL=redis://redis:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=10

# Caching
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_REPORTS_TTL=3600
CACHE_NEWS_TTL=600

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/var/log/abb/app.log

# Security
ENABLE_GZIP=true

